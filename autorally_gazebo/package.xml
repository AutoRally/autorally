<package>
  <name>autorally_gazebo</name>
  <version>0.2.4</version>
  <description>
    autorally_gazebo is used with Gazebo to simulate the AutoRally
    platform. This package was adapted from ackermann_vehicle_gazebo.
  </description>

  <maintainer email="bgoldfain3@gatech.edu">Brian Goldfain</maintainer>
  <license>BSD</license>

  <author email="bgoldfain3@gatech.edu">Brian Goldfain</author>

  <url type="website">http://autorally.github.io</url>

  <buildtool_depend>catkin</buildtool_depend>

  <run_depend>controller_manager</run_depend>
  <run_depend>gazebo_ros</run_depend>
  <run_depend>gazebo_ros_control</run_depend>
  <run_depend>rospy</run_depend>
  <run_depend>std_msgs</run_depend>
  <run_depend>tf</run_depend>
  <run_depend>xacro</run_depend>
  <run_depend>hector_gazebo_plugins</run_depend>
  <run_depend>hector_gazebo_worlds</run_depend>
  <run_depend>joy</run_depend>
  <run_depend>effort_controllers</run_depend>
  <run_depend>joint_state_controller</run_depend>

</package>
